<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoXamarin.AltaAutores">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Margin="12, 0, 0, 0">
            <Label
                Text="Nuevo Autor"
                FontAttributes="Bold"
                FontSize="Large"/>
            
            <Label Text="Nombre:"/>
            <Entry Placeholder="nombre" 
                   MaxLength="20"/>
            
            <Label Text="Apellidos:"/>
            <Entry Placeholder="apellidos" 
                   MaxLength="40"/>
            
            <Label Text="Nacimiento:"/>
            <Entry Placeholder="nacimiento"/>
            
            <Label Text="Telefono:"/>
            <Entry Placeholder="telefono" 
                   MaxLength="12"/>
            
            <Label Text="Sexo:"/>
            <Entry Placeholder="sexo" 
                   MaxLength="10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>